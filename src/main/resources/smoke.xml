<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Multithreading" parallel="tests" thread-count="2">
    <listeners>
        <listener class-name="org.example.utils.testng.TestListener"/>
    </listeners>
    <test name="Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="org.example.LoginTest">
                <methods>
                    <include name="userShouldLoginWithValidCredentials"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>

